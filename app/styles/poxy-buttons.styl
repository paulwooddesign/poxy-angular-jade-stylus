.pulse
  color white
  text-decoration none
  text-transform uppercase
  letter-spacing 0.05em
  cursor pointer
  border 4px solid white
  height $height
  width $width
  padding 0
  outline none
  overflow hidden

  span
    border-radius 50%
    display block
    width $width*2
    height $width*2
    line-height $width*2
    text-align center
    transition box-shadow 0.5s ease-out, color 0.3s 0.1s ease-out

  span:hover
    color $body-color
    box-shadow inset 0 0 0 $width rgba(white,0.8)
