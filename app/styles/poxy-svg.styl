@import 'poxy-settings.styl'


.icon {
    width: 100%;
    height: 100%;
    path{
        fill:none;
        stroke-width: 1.5px;
        stroke-dashoffset:0;
        stroke-linecap:round;
        stroke-linejoin:round;
        stroke-width: 1.5;
        stroke: black;
        &.long{
          stroke-dasharray:420,420;
          transition: 1.5s all ease;
          }

        &.longer{
          stroke-dasharray:512,512;
          transition: 1.5s all ease;
         }

        &.short{stroke-dasharray:90,90;
            transition: 1s all ease;

        }
        &.round { stroke-linecap:round ;
        stroke-linejoin:round ; }
        &.virtual{
            transition: 1.5s all ease;
            stroke-dasharray:1.1, 3;
            stroke-linecap:round ;
        }

    }
}


path.virtual
  stroke: $accent;
  -webkit-animation: virtual-outline 60s infinite linear;
  -moz-animation: virtual-outline 60s infinite linear;
  animation: virtual-outline 60s infinite linear;

  @-webkit-keyframes virtual-outline {  0%   { stroke-dashoffset:0;}  100% { stroke-dashoffset:512;}}
  @-moz-keyframes virtual-outline {  0%   { stroke-dashoffset:0;}  100% { stroke-dashoffset:512;}}
  @keyframes virtual-outline {  0%   { stroke-dashoffset:0;}  100% { stroke-dashoffset:512;}}


.featured-pages
  figure:nth-child(1)
    path.virtual:nth-child(2)
      stroke red

  figure:nth-child(2)
      path.virtual:nth-child(2)
        stroke green

  figure:nth-child(3)
      path.virtual:nth-child(2)
        stroke blue

  figure:nth-child(4)
      path.virtual:nth-child(2)
        stroke purple
