@import url('http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,100italic,300italic,400italic,700italic,900italic');
@import 'nib'


body
  font-family 'Lato' sans-serif
  font-size 100%
  background-color: #111
  //background-image url(http://subtlepatterns.com/patterns/binding_dark.png)

header
  background alpha(#333, 1)

#meat
  background alpha(#fff, .1)


figure
  position relative

figure span,
.shadow
  transition opacity 0.2s
  background-image radial-gradient(ellipse at center, rgba(0,0,0,0), rgba(0,0,0,0.45) 80%, rgba(0,0,0,0.75) 150%)
  border alpha(#fff, .15) solid 2px
  text-align center

figure:hover span
  opacity .5


// Navigation
h1,
h2,
h3,
h4,
h5,
h6,
header nav a
  text-transform uppercase


// Typography
p
  font-family 'Lato' sans-serif
