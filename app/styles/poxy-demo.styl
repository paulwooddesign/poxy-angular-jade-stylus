@import url('http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,100italic,300italic,400italic,700italic,900italic');
@import 'nib'
/////////////////////////////////
// DESIGN SETTINGS
/////////////////////////////////
$body-color = #111
$body-color-light = #ccc
$accent = #d251d7

/////////////////////////////////
// Styles
///////////////////////////////
body
  //font-family 'Lato' sans-serif
  font-family "Courier New", Courier, monospace
  font-size 100%
  background-color: #111
  //background-image url(http://subtlepatterns.com/patterns/binding_dark.png)





header
  background alpha(#fff, 1)

  .logo
    background-size contain
    background-repeat no-repeat

  a
    color $body-color


footer
  position relative

#meat
  background alpha(#fff, 1)


figure
  position relative

//#meat figure span,
.shadow
  transition opacity 0.2s
  background-image radial-gradient(ellipse at center, rgba(0,0,0,0), rgba(0,0,0,0.45) 80%, rgba(0,0,0,0.75) 150%)
  border alpha(#fff, .15) solid 2px
  text-align center

// #meat figure:hover span
//   opacity .5


// Navigation
h1,
h2,
h3,
h4,
h5,
h6,
header nav a
  text-transform uppercase


h1,
h2,
h3,
h4,
h5,
h6
  -webkit-mask-image url('../images/text-mask.png')
  -o-mask-image url('../images/text-mask.png')
  -moz-mask-image url('../images/text-mask.png')
  mask-image url('../images/text-mask.png')
  //text-shadow 0px 0px 30px rgba(30, 28, 28, 0.6)



// Typography
p
  font-family "Courier New", Courier, monospace

nav a:hover
  transition background 0.2s
  background-color $accent !important




section.full .slick-prev
  left 1rem

section.full .slick-next
  right 1rem


