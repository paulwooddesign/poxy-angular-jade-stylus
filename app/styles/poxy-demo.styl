@import url('http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,100italic,300italic,400italic,700italic,900italic');
@import 'nib'
/////////////////////////////////
// DESIGN SETTINGS
/////////////////////////////////
$body-color = #222
$body-color-light = #ccc
$accent = #d251d7

/////////////////////////////////
// Styles
///////////////////////////////
body
  font-family 'Lato' sans-serif
  font-size 100%
  background-color: #111
  //background-image url(http://subtlepatterns.com/patterns/binding_dark.png)

header
  background alpha(#333, 1)
footer
  position relative
#meat
  background alpha(#fff, .1)


figure
  position relative

#meat figure span,
.shadow
  transition opacity 0.2s
  background-image radial-gradient(ellipse at center, rgba(0,0,0,0), rgba(0,0,0,0.45) 80%, rgba(0,0,0,0.75) 150%)
  border alpha(#fff, .15) solid 2px
  text-align center

#meat figure:hover span
  opacity .5


// Navigation
h1,
h2,
h3,
h4,
h5,
h6,
header nav a
  text-transform uppercase


// Typography
p
  font-family 'Lato' sans-serif

nav a:hover
  transition background 0.2s
  background-color $accent !important




section.full .slick-prev
  left 0

section.full .slick-next
  right 0


footer:before
  content ""
  width 100%
  position relative
  height 50px
  float left
  position absolute
  top 0
  background-image -webkit-gradient(linear, 0 0, 300% 100%, color-stop(0.25rem, #666), color-stop(0.25rem, #666))
  background-image linear-gradient(135deg, #666 25%, transparent 25%), linear-gradient(225deg, #666 25%, transparent 25%)
  background-position 50%
  background-repeat repeat-x
  background-size 50px 100%
